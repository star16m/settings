" =============================================================================
" 검색어 Hightligh
" =============================================================================
set hlsearch
"
"
"
" =============================================================================
" 행 번호를 표시
"
set nu


"
" =============================================================================
" 새로운 행의 들여쓰기를 현재행과 같게 설정
"
set autoindent

"
" =============================================================================
" 검색어 대소문자 구분하지 않음
"
set ignorecase


"
" =============================================================================
" Minimal number of screen lines to keep above and below the cursor.
"
set scrolloff=2


"
" =============================================================================
"Completion mode that is used for the character specified with 'wildchar'.

" =============================================================================
set wildmode=longest,list
"
"
" "
" =============================================================================
" " List the tags that match [ident], using the information in the tags
" file(s).
" "
" =============================================================================
set ts=4 "tag select
"
"
" "
" =============================================================================
" " Does ":tselect[!] [ident]" and splits the window for the selected tag.
" "
" =============================================================================
set sts=4 "st select
"
"
" "
" =============================================================================
" " 스크롤바 width
" "
" =============================================================================
set sw=1
"
" "
" =============================================================================
" " :next, :rewind 등의 명령어로 다른 파일로 이동 시 현재 파일을 저장
" "
" =============================================================================
set autowrite
"
" "
" =============================================================================
" " vim 외부에서 파일이 변경되었음을 감지하면 자동으로 다시 불러들임
" "
" =============================================================================
set autoread
"
" "
" =============================================================================
" " 백업 파일을 생성하지 않음
" "
" =============================================================================
set nobackup
"
"
" "
" =============================================================================
" " C언어 자동 들여쓰기 활성화
" "
" =============================================================================
set cindent
"
" "
" =============================================================================
" " 줄의 끝, 시작, 들여쓰기에서 백스페이스 허용
" "
" =============================================================================
set bs=eol,start,indent
"
" "
" =============================================================================
" " 입력 모드에서 탭을 스페이스로 대체
" "
" =============================================================================
set expandtab
"
" "
" =============================================================================
" " 편집 기록을 256개까지 저장
" "
" =============================================================================
set history=256
"
" "
" =============================================================================
" " 상태바 표시 (0: 표시하지 않음, 1: 윈도우가 두개 이상인 경우, 2: 항상)
" "
" =============================================================================
set laststatus=2
"
"
" "
" =============================================================================
" " 터미널에서 붙여넣기 시 계단 현상 일어남 방지 (해제는 set paste!)
" "
" =============================================================================
set paste
"
" "
" =============================================================================
" " 자동 들여쓰기 설정 (4칸)
" "
" =============================================================================
set shiftwidth=4
"
" "
" =============================================================================
" " ().{} 에서 닫는 괄호를 입력할 때 일치하는 괄호를 보여줌
" "
" =============================================================================
set showmatch
"
"
" "
" =============================================================================
" " 검색시에 대문자를 포함하고 있으면 대/소를 구별
" "
" =============================================================================
set smartcase
"
"
" "
" =============================================================================
" " ?
" "
" =============================================================================
set smarttab
"
"
" "
" =============================================================================
" " 스마트한(?) 들여쓰기
" "
" =============================================================================
set smartindent
"
" "
" =============================================================================
" "
" "
" =============================================================================
set softtabstop=4
"
" "
" =============================================================================
" "
" "
" =============================================================================
set tabstop=4
"
"
" "
" =============================================================================
" " 화면 우측 하단에 현재 커서의 위치(줄,칸) 표시
" "
" =============================================================================
set ruler
"
"
" "
" =============================================================================
" " 키워드 입력 시 점진적 검색
" "
" =============================================================================
set incsearch
"
" "
" =============================================================================
" " 상태바 출력 형식 지정
" "
" =============================================================================
set statusline=\ %<%l:%v\ [%P]%=%a\ %h%m%r\ %F\
"
"
" "
" =============================================================================
" " 키를 잘 못 눌렀을 때 삑 소리 대신 화면이 번쩍이게 변경
" "
" =============================================================================
"set visualbell
"
" "
" =============================================================================
" " 마지막으로 수정된 곳에 커서를 위치함
" "
" =============================================================================
au BufReadPost *
\ if line("'\"") > 0 && line("'\"") <= line("$") |
\   exe "norm g`\"" |
\ endif
" "
" =============================================================================
" "
" =============================================================================
if $LANG[0]=='k' && $LANG[1]=='o'
set fileencoding=korea
endif
"
" "
" =============================================================================
" "
" =============================================================================
"
vmap <Tab> >gv
vmap <S-Tab> <gv
"
"
nnoremap <silent> <tab> :TlistToggle<CR>
nnoremap <silent> <F8> :TlistUpdate<CR>
nnoremap <silent> <F9> :TlistSync<CR>
"
let Tlist_Auto_Open = 1
"
" "map <C-r> <esc>:Gtags -r <CR>
" "map <C-p> <esc>:Gtags <CR>
" "map <C-b> <esc>:bp<CR>
" "map <C-c> <esc>:ccl<CR>
"
" "
" =============================================================================
" " 태그 파일(tags)의 위치를 지정
" "
" =============================================================================
set tags+=~/workspace/working/tags
"set tags+=~/workspace/ics-4.0/tags
"set tags+=~/extracted/linux/linux-2.6.39.3/tags
"
" "
" =============================================================================
" " 구문 강조 사용
" "
" =============================================================================
"
if has("syntax")
        syntax on
        endif
        ":hi Comment term=bold cterm=bold ctermfg=4
"

" added jkim

" Execute python script C-P 
function! s:ExecPy()
    exe "!" . &ft . " %"
:endfunction
command! Exec call <SID>ExecPy()
autocmd FileType python map <silent> <C-P> :call <SID>ExecPy()<CR>


" Enable file type plugins
autocmd FileType python let g:pydiction_location='~/.vim/pydiction/complete-dict'

autocmd FileType python setl autoindent
autocmd FileType python setl smartindent cinwords=if,elif,else,for,while,try,except,finally,def,class
autocmd FileType python setl expandtab tabstop=4 shiftwidth=4 softtabstop=4
